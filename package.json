{
	"name": "iceberg-theme",
	"displayName": "Iceberg Theme",
	"description": "Bluish color theme",
	"version": "2.0.3",
	"publisher": "cocopon",
	"license": "MIT",
	"homepage": "https://cocopon.github.io/iceberg.vim/",
	"repository": {
		"type": "git",
		"url": "https://github.com/cocopon/vscode-iceberg-theme.git"
	},
	"engines": {
		"vscode": "^1.11.0"
	},
	"icon": "assets/icon.png",
	"galleryBanner": {
		"color": "#161821",
		"theme": "dark"
	},
	"categories": [
		"Themes"
	],
	"contributes": {
		"themes": [
			{
				"label": "Iceberg",
				"uiTheme": "vs-dark",
				"path": "./themes/iceberg.color-theme.json"
			},
			{
				"label": "Iceberg Light",
				"uiTheme": "vs",
				"path": "./themes/iceberg-light.color-theme.json"
			}
		]
	},
	"scripts": {
		"test": "npm run lint",
		"build": "tsc --build src/tsconfig.json && node tmp/main.js",
		"format": "eslint --config src/.eslintrc.js --ext .ts --fix 'src/**/*.ts'",
		"lint": "eslint --config src/.eslintrc.js --ext .ts 'src/**/*.ts'"
	},
	"private": true,
	"devDependencies": {
		"@types/chroma-js": "^2.1.2",
		"@types/node": "^14.14.14",
		"@typescript-eslint/eslint-plugin": "^4.10.0",
		"@typescript-eslint/parser": "^4.10.0",
		"chroma-js": "^2.1.0",
		"eslint": "^7.16.0",
		"eslint-config-prettier": "^7.1.0",
		"eslint-plugin-prettier": "^3.3.0",
		"prettier": "^2.2.1",
		"typescript": "^4.1.3"
	}
}
